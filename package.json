{
  "name": "phi-creator",
  "version": "0.4.1",
  "description": "Chart editor for PhiX",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phi-x/phi-creator.git"
  },
  "author": "PhiX Dev Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phi-x/phi-creator/issues"
  },
  "keywords": [
    "phiformat",
    "phigros",
    "phix"
  ],
  "homepage": "https://github.com/phi-x/phi-creator#readme",
  "engines": {
    "node": ">=v14.16",
    "npm": ">=7.7"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "buildEnvTypes": "node scripts/buildEnvTypes.js",
    "build": "node scripts/build.js",
    "build:prod": "cross-env MODE=production run-s build",
    "compile:only": "electron-builder build --config electron-builder.config.js",
    "compile": "run-s build:prod \"compile:only {@}\" --",
    "watch": "cross-env MODE=development node scripts/watch.js",
    "lint": "eslint . --ext js,ts,tsx",
    "prettier": "prettier **/*.{js,ts,tsx,yml,json,cjs,mjs,html}",
    "pretypecheck": "run-s buildEnvTypes",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "run-p \"typecheck:*\""
  },
  "browserslist": [
    "Chrome 91"
  ],
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged && yarn typecheck"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/css-font-loading-module": "^0.0.6",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-json-storage": "^4.5.0",
    "@types/fs-extra": "^9.0.9",
    "@types/howler": "^2.2.2",
    "@types/lodash-es": "^4.17.4",
    "@types/object-hash": "^2.1.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vitejs/plugin-react-refresh": "^1.3.2",
    "cross-env": "^7.0.3",
    "electron": "^13.1.1",
    "electron-builder": "^22.11.5",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "pug": "^3.0.2",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "vite": "^2.3.6"
  },
  "dependencies": {
    "@inlet/react-pixi": "^6.5.1",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@pixi-essentials/cull": "^1.1.0",
    "@pixi/unsafe-eval": "^6.0.1",
    "@rooks/use-boundingclientrect": "^4.10.1",
    "@rooks/use-on-window-resize": "^4.10.1",
    "clsx": "^1.1.1",
    "dayjs": "^1.10.5",
    "electron-json-storage": "^4.5.0",
    "electron-updater": "^4.3.9",
    "electron-util": "^0.17.0",
    "fs-extra": "^10.0.0",
    "howler": "^2.2.1",
    "lodash-es": "^4.17.21",
    "mobx": "^6.1.8",
    "mobx-react-lite": "^3.2.0",
    "notistack": "^1.0.5",
    "object-hash": "^2.1.1",
    "pixi-particles": "^4.3.0",
    "pixi.js": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^3.3.0"
  }
}
