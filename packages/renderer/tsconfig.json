{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"],
    "types": [
      "@types/css-font-loading-module"
    ]
  },

  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/types/api.d.ts"
  ]
}
